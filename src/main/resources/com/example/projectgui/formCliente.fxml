<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!--Para el nombre del cliente -->
    <Label layoutX="50.0" layoutY="50.0" style="-fx-font-size: 14px;" text="Nombre del Cliente:" />
    <TextField fx:id="campoNombreCliente" layoutX="200.0" layoutY="50.0" style="-fx-pref-width: 200px;" />

    <!--Para el telefono del cliente -->
    <Label layoutX="50.0" layoutY="100.0" style="-fx-font-size: 14px;" text="Teléfono del Cliente:" />
    <TextField fx:id="campoTelefonoCliente" layoutX="200.0" layoutY="100.0" style="-fx-pref-width: 200px;" />

    <!--Para el DUI del cliente-->
    <Label layoutX="50.0" layoutY="150.0" style="-fx-font-size: 14px;" text="DUI del Cliente:" />
    <TextField fx:id="campoDuiCliente" layoutX="200.0" layoutY="150.0" style="-fx-pref-width: 200px;" />

    <!-- Botón Agregar -->
    <Button fx:id="btnGuardarDatosCliente" layoutX="177.0" layoutY="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Agregar" />

    <!-- Botón Cancelar -->
    <Button fx:id="btnCancelarDatosCliente" layoutX="369.0" layoutY="200.0" style="-fx-background-color: #D9534F; -fx-text-fill: white;" text="Cancelar" />

</AnchorPane>
